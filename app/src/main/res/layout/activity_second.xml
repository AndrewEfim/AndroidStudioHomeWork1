<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@color/colorRed">

            <View
                android:id="@+id/flagaustriapt2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="end|center_vertical"
                android:background="@color/colorWhite" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@color/colorWhite">


            <View
                android:id="@+id/flagpoland2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="end|bottom"
                android:background="@color/colorRed" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@color/colorWhite">

            <View
                android:id="@+id/flagital1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="#11d211" />

            <View
                android:id="@+id/flagital2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorWhite" />
            <View
                android:id="@+id/flagital3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_weight="1"
                android:background="#e60505" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp">

            <View
                android:id="@+id/flagcolumb1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:background="#edd205"
                tools:ignore="NotSibling" />
            <View
                android:id="@+id/flagcolumb2"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_below="@+id/flagcolumb1"
                android:background="#1920e4"
                tools:ignore="NotSibling" />

            <View
                android:id="@+id/flagcolumb3"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorRed"
                tools:ignore="NotSibling" />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreen">
            <View
                android:id="@+id/flagmadagas2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="end|bottom"
                android:background="@color/colorRed" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@color/colorRed">
            <View
                android:id="@+id/flagtailand1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/colorRed" />

            <View
                android:id="@+id/flagtailand2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="end|bottom"
                android:background="@color/colorWhite" />
            <View
                android:id="@+id/flagtailand3"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="end|bottom"
                android:background="@color/colorBlue" />
            <View
                android:id="@+id/flagtailand4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="end|bottom"
                android:background="@color/colorWhite" />
            <View
                android:id="@+id/flagtailand5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="end|bottom"
                android:background="@color/colorRed" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@color/colorRed">

            <View
                android:id="@+id/flagdenmark1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@color/colorWhite"
                tools:ignore="NotSibling" />

            <View
                android:id="@+id/flagdenmark2"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorWhite"
                tools:ignore="NotSibling"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp"
                android:layout_marginStart="90dp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>