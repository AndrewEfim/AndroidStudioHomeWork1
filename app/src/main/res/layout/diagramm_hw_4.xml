<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackround"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText4num1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="number1"
            android:background="@color/colorWhite"/>

        <EditText
            android:id="@+id/editText4num2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="number2"
            android:background="@color/colorWhite"/>

        <EditText
            android:id="@+id/editText4num3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="number3"
            android:background="@color/colorWhite"/>
        <Button
            android:id="@+id/buttonOk"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:text="OK"
            android:textSize="20dp"
            android:gravity="center"
            />

    </LinearLayout>


    <com.example.andreii.firstaplication.HW4.MyViewHomeWorkFourth
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/mainBackround"></com.example.andreii.firstaplication.HW4.MyViewHomeWorkFourth>




</LinearLayout>
