<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_background_one"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edittext7A"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="61dp"
        android:layout_marginTop="41dp"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/newalbumbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@color/backgroundFoThirdActivity"
        android:text="Add New"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

</RelativeLayout>
